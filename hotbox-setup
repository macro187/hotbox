#!/usr/bin/env sh
set -eu
HOTBOX=$(CDPATH= cd -- "$(dirname -- "$0")" && pwd -P)


. $HOTBOX/lib/sh.sh


system=false
while test $# -gt 0 ; do
    case $1 in
        --system)
            shift
            system=true
            ;;
        -*)
            die "Unrecognised option '$1'"
            ;;
        *)
            break
            ;;
    esac
done

test $# -gt 0 || die "Expected <spec>"
spec="$1" ; shift

test $# -eq 0 || die "Unexpected argument '$1'"


#
# Read features from spec
#
. $HOTBOX/lib/source-spec.sh


#
# Set up features
#
if $system ; then
    test "$(current_user)" = "root" || die "Must be root to set up system features"

    for feature in $features ; do
        test -f $HOTBOX/features/$feature.system || continue

        heading "Setting up system $feature"
        $HOTBOX/features/$feature.system
    done
else
    for feature in $features ; do
        test -f $HOTBOX/features/$feature || continue

        heading "Setting up $feature"
        $HOTBOX/features/$feature
    done
fi
