#!/usr/bin/env sh
set -eu
hotbox=$(CDPATH= cd -- "$(dirname -- "$0")" && pwd -P)


. $hotbox/hotbox-sh.sh


distro="$1" ; shift


user=$(current_user)
uid=$(current_uid)
gid=$(current_gid)


$hotbox/hotbox-docker-build \
    hotbox-base-$distro \
    hotbox-base-$distro


$hotbox/hotbox-docker-build \
    hotbox \
    hotbox-$distro \
    --build-arg baseimage=hotbox-base-$distro \
    --build-arg user=$user \
    --build-arg uid=$uid \
    --build-arg gid=$gid
