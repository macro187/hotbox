#!/bin/sh
set -eu
HOTBOX=$(CDPATH= cd -- "$(dirname -- "$0")" && pwd -P)


. $HOTBOX/lib/sh.sh


#
# Command-line arguments
#
system=false
while test $# -gt 0 ; do
    case $1 in
        --system)
            shift
            system=true
            ;;
        -*)
            die "Unrecognised option '$1'"
            ;;
        *)
            break
            ;;
    esac
done

test $# -gt 0 || die "Expected <feature>"
feature="$1" ; shift

test $# -eq 0 || die "Unexpected argument '$1'"


#
# Find script
#
scriptdir="$($HOTBOX/lib/find-feature-dir $feature)"
test -n "$scriptdir" || die "Feature $feature not found"
scriptname="$feature.feature.sh"
description="$feature"

if $system ; then
    test "$(current_user)" = "root" || die "Must be root to set up system features"
    description="system $feature"
    scriptname="$feature.feature.sys.sh"
fi

script="$scriptdir/$scriptname"
test -f $script || exit 0


#
# Run script
#
heading "Setting up $description"
env HOTBOX=$HOTBOX /bin/sh -eu $script
