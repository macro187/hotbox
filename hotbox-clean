#!/usr/bin/env sh
set -eu
HOTBOX=$(CDPATH= cd -- "$(dirname -- "$0")" && pwd -P)


. $HOTBOX/lib/sh.sh


hotbox_images="$(docker image ls --filter label=hotbox -q)"


if [ -n "$hotbox_images" ] ; then
    heading "Deleting hotbox container images"
    echo_on
    docker image rm $hotbox_images
    echo_off
fi
